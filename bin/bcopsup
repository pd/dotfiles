#!/usr/bin/env bash

set -euo pipefail

if which gsed >/dev/null 2>&1; then
  alias sed=gsed
fi

extract_to_temp() {
  local zip="$1"
  tmpdir="$(mktemp -d)"
  unzip -qq "$zip" -d "$tmpdir"
  echo "$tmpdir"
}

get_year() {
  local dir="$1"
  local flac="$(ls "$dir"/*.flac | head -1)"
  metaflac --list --block-type=VORBIS_COMMENT "$flac" |
    sed -n '/DATE=/s/^.*DATE=//p'
}

get_duration() {
  local flac="$1"
  ffprobe -hide_banner "$flac" 2>&1 |
    sed -n '/  Duration:/s/^.*Duration: \([0-9:]\+\).*$/\1/; s/^00://p'
}

make_dir() {
  local zip="$1"
  local year="$2"

  local album="${zip/.zip}"
  local dirname="$album ($year) {WEB} [FLAC]"
  mkdir -p "$dirname"
  echo "$dirname"
}

track_list() {
  local dir="$1"
  local torrent="$2"
  local info="$(lstor --json "$torrent")"

  local title="$(echo "$info" | jq -r .info.name | sed 's/ {WEB}.*$//')"
  echo "[b]${title}[/b]"
  echo

  IFS=$'\n'
  echo "$info" | jq -rc '.info.files[].path[0]' | grep '\.flac$' | while read -r path; do
    echo -n "$path" | sed -E 's|.* - [0-9]{2} (.+)\.flac$|[#] \1|'
    duration="$(get_duration "$dir/$path")"
    echo " ([i]$duration[/i])"
  done
}

main() {
  local zip="$1"
  local tmpdir year dir

  tmpdir="$(extract_to_temp "$zip")"
  year="$(get_year "$tmpdir")"
  dir="$(make_dir "$zip" "$year")"
  mv "$tmpdir"/* "$dir"
  rm -r "$tmpdir"

  mktorrent \
    --source=OPS \
    --private \
    --announce="$OPS_ANNOUNCE_URL" \
    "$dir"

  if [[ -r "$dir/cover.jpg" ]]; then
    magick "$dir/cover.jpg" -resize 500x500 "$dir".jpg
    ptpimg_uploader "$dir".jpg
  elif [[ -r "$dir/cover.png" ]]; then
    magick "$dir/cover.png" -resize 500x500 "$dir".png
    ptpimg_uploader "$dir".png
  else
    echo "no cover image found"
  fi

  echo
  track_list "$dir" "$dir".torrent
}

if [[ -z "${OPS_ANNOUNCE_URL:-}" ]]; then
  echo "\$OPS_ANNOUNCE_URL empty." >&2
  exit 1
fi

main "$1"
